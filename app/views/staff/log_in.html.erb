<% provide(:title, "Staff Sign in") %>
<h1>Sign in </h1>

<div class = "row">
	<div class = "span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>
			
			<%= f.label :user_name %>
			<%= f.text_field :user_name %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
