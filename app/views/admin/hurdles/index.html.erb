<% provide(:title, "Hurldes") %>
<head>
  <h2> Hurdles </h2>
</head>
<body>
  <table class ="table table-striped" border = "3" cellpadding = "3" align = "center">
    <thead>
      <tr>
	<th><%= sortable "first_name", Hurdle, "First Name" %></th>
	<th><%= sortable "last_name", Hurdle, "Last Name" %></th>
	<th><%= sortable "qualification", Hurdle %></th>
	<th><%= sortable "gender", Hurdle %></th>
	<th colspan ="3"><%= sortable "id", Hurdle, "Options" %></th></th>
      </tr>
    </thead>
    <tbody>
      <% for hurdle in @hurdles %>
      <tr>
	<td><%= hurdle.first_name %></td>	
	<td><%= hurdle.last_name %></td>
	<td><%= hurdle.qualification %></td>
	<td><%= hurdle.gender %></td>
	<td><%= link_to "Show", [:admin,hurdle] %></td>
	<td><%= link_to "Edit", edit_admin_hurdle_path(hurdle) %></td>
	<td><%= link_to "Destroy", [:admin,hurdle], :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</body>


<p><%= link_to "Back to Dashboard", admin_path %></p>
