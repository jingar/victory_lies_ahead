<%= form_for([:admin,@match]) do |f| %>
  <%= render 'shared/error_messages', entity: @match %> 

  <div class="field">
    <%= f.label :when %><br />
    <%= f.datetime_select :when %>
  </div>
  <div class="field">
    <%= f.label :homeTeam_id %><br />
    <select name="match[team_id]">
    <% Team.all.each do |team| %>
      <option value="<%= team.id %>"><%= team.team_name %></option>
  <% end %>
  <div class="field">
    <%= f.label :homeGoals %><br />
    <%= f.number_field :homeGoals %>
  </div>
  <div class="field">
    <%= f.label :awayTeam_id %><br />
    <select name="match[team_id]">
    <% Team.all.each do |team| %>
      <option value="<%= team.id %>"><%= team.team_name %></option>
  <% end %>
   <div class="field">
    <%= f.label :awayGoals %><br />
    <%= f.number_field :awayGoals %>
  </div>
  <div class="field">
    <%= f.label :pitch %><br />
    <%= f.number_field :pitch %>
  </div>
  <div class="field">
    <%= f.label :umpire_id %><br />
    <select name="match[umpire_id]">
    <% Umpire.all.each do |umpire| %>
        <option value="<%= umpire.id %>"><%= umpire.first_name + " " + umpire.last_name %></option>
    <% end %>
</select>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
