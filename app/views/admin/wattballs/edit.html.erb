<h1>Editing Wattball</h1>

<%= form_for([:admin,@wattball]) do |f| %>
  <%= render 'shared/error_messages', entity: @wattball %> 

  <div class="field">
    <%= f.label :goals %><br />
    <%= f.number_field :goals, in: 0..100, step: 1, value: 0 %>
  </div>
    <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Show', [:admin,@wattball] %> |
<%= link_to 'Back', admin_wattball_path %>
