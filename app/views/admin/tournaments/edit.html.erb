<% provide(:title , 'Edit Tournament details') %>
<h1>Edit Tournament details</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@tournament) do |f| %>
      <%= render 'shared/error_messages', entity: @tournament %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :start_date %>
      <%= f.datetime_select:start_date, :prompt => {:day => 'Day', :month => 'Month', :year => 'Year'}, :start_year => Date.today.year - 2, :end_year => Date.today.year + 2, date_separator: "/", order: [:day, :month, :year], :minute_step => 15 %>

      <%= f.label :end_date %>
      <%= f.datetime_select:end_date, :prompt => {:day => 'Day', :month => 'Month', :year => 'Year'}, :start_year => Date.today.year - 2, :end_year => Date.today.year + 2, date_separator: "/", order: [:day, :month, :year], :minute_step => 15 %>

      <br /><br />
      <%= f.submit "create new heat", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
