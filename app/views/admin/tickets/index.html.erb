<% provide(:title, "Tickets") %>
<head>
  <h2> Tickets </h2>
</head>
<body>
  	<b>Seach for reserved tickets by Order Id</b>
	<%= form_tag admin_tickets_path, :method => 'get' do %>
	<p>
          <%= text_field_tag :search, params[:search] %><br/>
          <%= submit_tag "Search", :order_id => nil %><br/>
	</p>
	<% end %>
	<table class ="tablesorter">
  		<thead>
			<tr>
			  <th><%= sortable "first_name", Ticket, "First Name" %></th>
			  <th><%= sortable "last_name", Ticket, "Last Name" %></th>
			  <th><%= sortable "email", Ticket, "Email Address" %></th>
			  <th><%= sortable "address", Ticket, "Address" %></th>
			  <th><%= sortable "order_id", Ticket, "Order ID" %></th>
			  <th><%= sortable "tickets_bought", Ticket, "Tickets Bought" %></th>
			  <th><%= sortable "used", Ticket, "Used" %></th>
			</tr>
      	</thead>
		<tbody>
			<% for ticket in @sort_tickets %>
			<tr>
			  <td><%= ticket.first_name %></td>
			  <td><%= ticket.last_name %></td>
			  <td><%= ticket.email %></td>
			  <td><%= ticket.address %></td>
			  <td><%= ticket.order_id %></td>
			  <td><%= ticket.tickets_bought %></td>
			  <td><%= ticket.used %></td>
			  <td><%= link_to "Delete", [:admin,ticket], :confirm => 'Are you sure?', :method => :delete %></td>
			</tr>
      		</tbody>
      		<% end %>
    </table>
</body>


<p><%= link_to "New ticket", new_admin_ticket_path %></p>
<p><%= link_to "Back to Dashboard", admin_path %></p>

