<% provide(:title, "Edit heat") %>
<h1> Update heat </h1>

<div class = "row">
  <div class = "span6 offset3">
    <%= form_for(@heat) do |f| %>
      <%= render 'shared/error_messages', entity: @heat %>

      <%= f.label :time %>
      <%= f.text_field :time %>

      <%= f.label :gender %>
      <%= f.radio_button :gender, "f" %>F
      <%= f.radio_button :gender, "m" %>M 
      <%= fields_for "heat[hurdles]" do |h| %>
        <%= h.label :hurdle_id, "Select hurdles racers" %>
        <%= h.collection_select(
          :hurdle_id,
          Hurdle.all(:order=>"first_name ASC"), :id, :name,
          {include_blank: false},# selected: [1,2] },
          { :multiple => true }
        ) %>
      <% end %>

      <br /><br />
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
