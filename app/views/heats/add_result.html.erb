<% provide(:title, "Add Heat Result") %>
<h1> Add Heat Result </h1>

<div class = "row">
  <div class = "span6 offset3">
    <%= form_for(@heat) do |f| %>
      <%= render 'shared/error_messages', entity: @heat %>

      <%= f.fields_for :heat_hurdles do |h| %>
        <%= h.label :finish_time, "Insert result time" %>
        <%= h.time_select :finish_time, include_seconds: true %>
      <% end %>

      <br /><br />
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
