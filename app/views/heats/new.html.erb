<% provide(:title , 'New Hurdle Heat') %>
<h1>New Hurdle Heat</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@heat) do |f| %>

    <%= render 'shared/error_messages', entity: @heat %>

    <%= f.label :time %>
    <%= f.text_field :time %>

    <%= f.label :gender %>
    <%= f.text_field :gender %>

    <%= f.label :hurdle %>
    <%= collection_select(
      @heat, :hurdle_id, 
      Hurdle.all(:order=>"first_name ASC"), :id, :name,
      { :selected => @heat.hurdle_ids},
      { :multiple => true }
    ) %>

    <br /><br />
    <%= f.submit "create new heat", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
