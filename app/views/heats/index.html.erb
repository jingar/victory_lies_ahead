<% provide(:title, 'Hurdle Heats') %>
<h1>Hurdle heats</h1>

<ul class = "heats">
  <% @heats.each do |heat| %>
    <li>
      <%= link_to heat.time.strftime('%e %b %Y %H:%M:%S')+" "+heat.gender+"; round: "+heat.round.to_s+"; n_hurdles: "+heat.hurdles.count.to_s, heat %>
    </li>
  <% end %>
</ul>
